{
  "name": "@droz-js/monorepo",
  "version": "3.0.0",
  "private": true,
  "workspaces": [
    "package",
    "docs"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:docs": "turbo run build --filter=@droz-js/visu-docs",
    "build:visu": "turbo run build --filter=@droz-js/visu",
    "build-storybook": "storybook build -c ./docs/.storybook",
    "dev": "turbo run dev --parallel",
    "dev:docs": "turbo run dev --parallel --filter=@droz-js/visu-docs",
    "dev:visu": "turbo run dev --parallel --filter=@droz-js/visu",
    "lint:docs": "eslint --fix --ext .tsx,.ts,.jsx,.js docs/",
    "lint:visu": "eslint --fix --ext .tsx,.ts,.jsx,.js package/",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest package/src/__tests__",
    "test:watch": "jest --watch package/src/__tests__",
    "test:coverage": "jest --watch --collectCoverage package/src/__tests__"
  },
  "lint-staged": {
    "**/*.{js, jsx, ts, tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@droz-js/eslint-config": "^1.0.1",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "phosphor-react": "latest",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "*",
    "turbo": "latest",
    "typescript": "^5.3.3",
    "vite": "^4.5.2"
  },
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": ">=14.0.0"
  }
}