{
  "name": "@droz-js/monorepo",
  "version": "2.6.1",
  "private": true,
  "workspaces": [
    "package",
    "docs"
  ],
  "scripts": {
    "build": "turbo run build --no-cache",
    "build:docs": "turbo run build --no-cache --filter=@droz-js/visu-docs",
    "build:visu": "turbo run build --no-cache --filter=@droz-js/visu",
    "dev": "turbo run dev --parallel --no-cache",
    "dev:docs": "turbo run dev --parallel --no-cache --filter=@droz-js/visu-docs",
    "dev:visu": "turbo run dev --parallel --no-cache --filter=@droz-js/visu",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint:docs": "eslint --fix --ext .tsx,.ts,.jsx,.js docs/",
    "lint:visu": "eslint --fix --ext .tsx,.ts,.jsx,.js package/",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch"
  },
  "lint-staged": {
    "**/*.{js, jsx, ts, tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "phosphor-react": "latest",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "*",
    "turbo": "latest",
    "typescript": "^5.3.3",
    "vite": "^4.5.2"
  },
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": ">=14.0.0"
  }
}